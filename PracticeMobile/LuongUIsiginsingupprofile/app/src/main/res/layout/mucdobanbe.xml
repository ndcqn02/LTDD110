<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_outline"
        android:clipToOutline="true"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageviewHinh"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:clipToOutline="true" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/texviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="204dp"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/texviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texviewTen"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:text="Name" />

    <TextView
        android:id="@+id/texviewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texviewMoTa"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:drawableRight="@drawable/icon_star"
        android:text="4.7"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/texviewTen"
        android:layout_marginLeft="350dp"
        android:scaleType="center"
        android:src="@drawable/like_icon" />

</RelativeLayout>